{
    "name": "typescript-starter-template",
    "version": "0.0.1",
    "description": "A simple typescript starter app",
    "main": "dist/index.ts",
    "repository": "https://github.com/killerchip/typescript-starter-template.git",
    "author": "Costas Ioannou <ioannou.dev@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "rimraf dist && tsc",
        "develop": "nodemon",
        "start": "yarn build && node dist/index.js",
        "lint": "tsc --noEmit && eslint ./ --ext .js,.ts,.tsx",
        "pretty": "prettier --write .",
        "prepare": "husky install",
        "pre-commit": "pretty-quick --staged",
        "customize": "yarn mrm --dir ./.mrm customize -i",
        "update": "ncu -u"
    },
    "dependencies": {
        "typescript": "^4.4.4"
    },
    "devDependencies": {
        "@types/node": "^16.11.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.2",
        "mrm": "^3.0.10",
        "mrm-core": "^6.1.7",
        "nodemon": "^2.0.13",
        "npm-check-updates": "^11.8.5",
        "prettier": "2.4.1",
        "pretty-quick": "^3.1.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.3.0"
    }
}
