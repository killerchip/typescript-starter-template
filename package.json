  "dependencies": {
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@types/node": "^16.10.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "nodemon": "^2.0.13",
    "rimraf": "^3.0.2"
  }
}
